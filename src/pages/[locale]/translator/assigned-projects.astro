---
import {getLangFromUrl, useTranslations} from '../../../i18n/utils';
import { languages } from '../../../i18n/ui';
import StandardPage from "../../../layouts/StandardPage.astro";
import TranslatorProjectsView from "../../../components/translator/TranslatorProjectsView.tsx";

const l = getLangFromUrl(Astro.url);
const t = useTranslations(l);

const { locale } = Astro.params;

const userData = Astro.locals.user;
if (!userData || userData.role !== "Translator") {
    return Astro.redirect(`/${l}/`);
}
---

<StandardPage>
    <div class="flex flex-col items-center">
        <h1 class="text-center text-3xl">{t('index.assigned_projects')}</h1>
        <TranslatorProjectsView client:load lang={l} projectType="ASSIGNED"></TranslatorProjectsView>
    </div>


</StandardPage>