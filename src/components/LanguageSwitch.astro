---

import {languages} from "../i18n/ui.ts";
import {getRouteFromUrl} from "../i18n/utils.ts";
const route = getRouteFromUrl(Astro.url);

---
<div class="flex flex-row">
    {Object.entries(languages).map(([lang, label]) => (
                <a class="px-3 text-lg mx-3 shadow-blue-500/50 rounded-full bg-sky-300 hover:bg-sky-200" href={`/${lang}/${route || ''}`}>{label}</a>
    ))}
</div>