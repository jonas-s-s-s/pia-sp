---
interface Props {
    href: string
    title: string
    class?: string
}

const {href, title, class: className} = Astro.props
---

<a
        href={href}
        class={`group flex items-center gap-4 rounded-xl border border-gray-200 bg-white p-4 transition 
        hover:border-gray-300 hover:shadow-md focus:outline-none focus:ring-2 focus:ring-blue-500 ${className ?? ""}`}
>
    <slot name="icon">
    </slot>

    <span class="text-sm font-semibold text-gray-900">
    {title}
  </span>
</a>
