---
import {getLangFromUrl} from "../i18n/utils.ts";
import UserAccountLink from "./UserAccountLink.astro";
const lang = getLangFromUrl(Astro.url);
---
<header class="shadow bg-zinc-50 sticky top-0 grid grid-cols-3 pt-2 pb-2 grid-rows-none z-999">
    <a class="col-2" href={`/${lang}/`}>
        <h1 class="text-center text-2xl md:text-4xl lg:text-5xl antialiased pt-2">PIA 2025</h1>
    </a>

    <div class="flex flex-col items-end place-content-end col-3 pr-2 md:pr-4">
        <UserAccountLink/>
    </div>

</header>
